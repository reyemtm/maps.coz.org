<% var cat = (page.category) %>
<div id="content">
  <div class="container">
    <div class="columns">
      <% site.categories.sort('name').map(function(category){  %>
        <% if(category.name == cat) { %>
          <!--div class="archive-year-wrap" id="<%= category.name %>">
                              <h1 class="archive-category"><%= category.name %></h1>
                          </div-->
          <% category.posts.sort('-date').map(function(post, i){  %>
          <%- partial('common/mapcard', {map: post, index: true}) %>
          <div class="modal" id="<%- post.slug %>">
              <a href="#close" class="modal-overlay" aria-label="Close"></a>
              <div class="modal-container">
                <div class="modal-header">
                  <a href="#close" class="btn btn-clear float-right modal-close" aria-label="Close"></a>
                  <div class="modal-title h4">
                    <p><%- post.title %></p>
                  </div>
                </div>
                <div class="modal-body">
                  <div class="content">
                    <p><%- post.about %></p>
                  </div>
                </div>
                <div class="modal-footer">
                  <a href="#close" aria-label="Close" class="modal-close"><button class="btn btn-primary">Close</button></a>
                </div>
              </div>
            </div>
        <% }) %>
      <% } %>
    <% }) %>
    </div>
  </div>
</div>