<div class="modal" id="<%- post.slug %>">
  <a href="#close" class="modal-overlay" aria-label="Close"></a>
  <div class="modal-container">
    <div class="modal-header">
      <a href="#close" class="btn btn-clear float-right modal-close" aria-label="Close"></a>
      <div class="modal-title h4">
        <p><%- post.title %></p>
      </div>
    </div>
    <div class="modal-body">
      <div class="content">
        <p><%- post.about %></p>
        <p class="text-error">
          <% site.categories.map(function(category){  %>
            <% category.posts.map(function(p) { %>
              <% if (p.title == post.title) { %>
                <% if (category.name == "internal") {%> This map is publicly accessible but is meant for internal use and is not shown in the public map gallery.<%}%>
                <% if (category.name == "development") {%>This map is still in development.<%}%>
            <%}%>
            <% }) %>
          <% }) %>
        </p>
      </div>
    </div>
    <div class="modal-footer">
      <a href="#close" aria-label="Close" class="modal-close"><button class="btn btn-primary">Close</button></a>
    </div>
  </div>
</div>